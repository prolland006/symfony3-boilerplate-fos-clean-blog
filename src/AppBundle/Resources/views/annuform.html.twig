{% extends 'AppBundle::base.html.twig' %}
{% block content %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <form id="form-annu" action="POST">
                    <h1>Annuaire</h1>
                    <div class="form-group">
                        <label for="name">Nom</label>
                        <input type="text" class="form-control" id="_name" name="_name" aria-describedby="name-help" placeholder="Nom">
                        <small id="name-help" class="form-text text-muted">Saisir un nom.</small>
                    </div>
                    <div class="form-group">
                        <label for="phone">Téléphone</label>
                        <input type="text" class="form-control" id="phone" placeholder="Téléphone">
                    </div>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </form>
            </div>
        </div>
    </div>

    <hr>
{% endblock %}
{% block script %}
    <script>
        $( document ).ready(function() {

            $("#form-annu").submit(function(e){
                e.preventDefault();

                alert('http://localhost/app_dev.php/add/'+$('#_name').val()+'/'+$('#phone').val());

                $.ajax({
                    type: "POST",
                    url: 'http://localhost/app_dev.php/add/'+$('#_name').val()+'/'+$('#phone').val(),
                    success: function(data)
                    {
                        console.log(data); // show response from the php script.
                    }
                });

            });
        });
    </script>
{% endblock %}